<h1><%= @beer.name %></h1>
<h2><%= link_to @beer.brewery.name, brewery_path(@beer.brewery) %> - <%= @beer.brewery.location %></h2>
<h2><%= link_to @beer.style.name, style_path(@beer.style) %></h2>


<%= form_for [@beer, @rating], url: beer_ratings_path(@beer), method: :post do |f| %>
  <!-- <%= f.label("rating", "value", (1..5)) %> -->
  <%= f.label :rating %>
  <%= f.select :rating, 1..5 %>
  <%= f.submit "Rate this beer!" %>
<% end %>
